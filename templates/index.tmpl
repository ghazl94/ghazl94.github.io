## -*- coding: utf-8 -*-
<%namespace name="helper" file="index_helper.tmpl"/>
<%namespace name="math" file="math_helper.tmpl"/>
<%namespace name="comments" file="comments_helper.tmpl"/>
<%namespace name="pagination" file="pagination_helper.tmpl"/>
<%namespace name="feeds_translations" file="feeds_translations_helper.tmpl" import="*"/>
<%inherit file="base.tmpl"/>

<%block name="extra_head">
    ${parent.extra_head()}
    % if posts and (permalink == '/' or permalink == '/' + index_file):
        <meta name="description" content="${blog_description(locale)}">
    % endif
    % if not posts:
        <meta name="robots" content="noindex">
    % endif
    ${math.math_styles_ifposts(posts)}
</%block>

<%block name="content">
<%block name="content_header">
    ${feeds_translations.translation_link(kind=kind)}
</%block>

% if 'main_index' in pagekind:
    ${front_index_header}
% endif

% if page_links:
    ${pagination.page_navigation(current_page, page_links, prevlink, nextlink, prev_next_links_reversed)}
% endif

<div class="postindex">
% for post in posts:
    <div class="post-preview">
        <h2><a href="${post.permalink()}">${post.title(lang)}</a></h2>
        
        <div class="date">
            <time class="published" datetime="${post.formatted_date('webiso')}">
                ${post.formatted_date(date_format)}
            </time>
        </div>
        
        <!-- Remove teaser content display entirely -->
        
        <p class="read-more">
            <a href="${post.permalink()}" class="btn btn-outline-primary">Read more &rarr;</a>
        </p>
        <hr>
    </div>
% endfor
</div>

% if page_links:
    ${pagination.page_navigation(current_page, page_links, prevlink, nextlink, prev_next_links_reversed)}
% endif
</%block>

<%block name="extra_js">
    ${math.math_scripts_ifposts(posts)}
</%block>
